pipeline {
  agent any
  stages {
    stage("Test") {
      when {
        not {
          branch "master"
        }
        anyOf {
          branch "feature/*"
          branch "bugfix/*"
        }
      }
      steps {
        echo "Test stage."
      }
    }
    stage("Fail") {
      when {
        not {
          anyOf {
            branch "feature/*"
            branch "bugfix/*"
          }
        }
      }
      steps {
        error("Wrong name for: ${env.BRANCH_NAME}")
      }
    }
  }
}
